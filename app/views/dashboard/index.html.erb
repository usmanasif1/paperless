<h3>Place Order Here...</h3>
<br/>
<br/>
<div style="margin-left: 15%; width:60%;">
  <%= simple_form_for(Order.new,url: guest_order_orders_path, method: :post, :html => {:class => 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Email:</label>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Phone:</label>
          <div class="col-sm-10">
            <%= f.number_field :phone, class: "text_field form-control" , placeholder: "123..."%>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Order Name:</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Tot. Sheets:</label>
          <div class="col-sm-10">
            <%= f.number_field :no_of_sheets, class: "text_field form-control", placeholder: "3333..." %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Sheet Type:</label>
          <div class="col-sm-10">
            <%= f.text_field :sheet_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Start Date:</label>
          <div class="col-sm-10">
            <%= f.text_field :from_date, class: "form-control datepicker", placeholder: "MM/DD/YYYY" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Finishing Date:</label>
          <div class="col-sm-10">
            <%= f.text_field :to_date, class: "form-control datepicker",placeholder: "MM/DD/YYYY" %>
          </div>
        </div>

        <div class="form-group"> 
          <div style="margin-left: 19%;">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
  <% end %>
</div>