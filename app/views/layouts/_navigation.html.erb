<%#= link_to "PaperLess", root_url, :class => 'brand' %>
  <% if user_signed_in? %>
    <ul class="nav navbar-nav">
      <% if current_user && current_user.roles.where(name: ["Super Admin", "Admin"]).any? %>
        <li><%= link_to 'users', users_path %></li>
      <% else %>
        <li><%= link_to 'Orders', orders_path %></li>
        <li><%= link_to 'Folders', folders_path %></li>
      <% end %>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to (current_user.username), edit_user_registration_path, :class=>"pull-right" %>
      </li>
       <li >
        <%= link_to 'Logout', destroy_user_session_path , method: :delete %>
      </li>
    </ul>
  <% else %>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to 'Login', new_user_session_path, :class=>"pull-right" %>
      </li>
    </ul>
  <% end %>
</ul>