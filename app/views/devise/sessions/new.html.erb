<div id="wrapper">
  <h3 style="text-align: center;padding-bottom: 18px;">Sign In</h3>
  <div id="login_area_bg">
    <div class="registration_form_css">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Email:</label>
          <div class="col-sm-10">
            <%#= f.input :email, :required => true %>
            <%= f.text_field :email, class: "form-control", :required => true%>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="email">Password:</label>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control"%>
          </div>
        </div>

        <div class="form-group"> 
          <div style="margin-left: 19%;">
            <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <div id="help_forgot_pw">
  </div>

  <div class="clearfooter"></div>
</div>

<div id="footer">
  <div id="footer_logo">
    <div id="powered_by">
      <%= 'powered_by' %> <a href=<%= "#" %> target="_blank"><%= PaperLess %></a>
    </div>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('user_email').focus();
</script>



