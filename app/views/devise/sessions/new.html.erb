<div id="wrapper">
  <div id="top_logo">
    <%#= image_tag current_school_detail.logo.url %>
  </div>

  <div id="login_area_bg" style="margin-top:8%;">

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>

      <div id="login_area" style="margin-top: -12%;">
        <label for="email"><%= 'Email' %></label>
        <div id="username_textbox_bg">
          <%= f.text_field :email%>
        </div>

        <label for="password"><%= 'Password' %></label>
        <div id="password_textbox_bg">
          <%= f.password_field :password %>
        </div>

        <div id="notice-box">
          <% if !flash.empty? %>
            <div id="notice"><%= flash[:notice] %></div>
          <% end %>
        </div>

        <div id="submit_area">
          <%= f.button :submit, "Sign in", :class => 'submit' %>
          <%#= submit_tag t('login'), :class => "submit" %>
        </div>

        <label for="forgot_password" class="forgot_password_link">
            <%= link_to "Sign up", new_registration_path(resource_name) %><br />
            <%= link_to "forgot password?", new_password_path(resource_name) %>
        </label>



      </div>
    </div>
  <% end %>
  <div id="help_forgot_pw">

  </div>
  <div class="clearfooter"></div>
</div>

<div id="footer">
  <div id="footer_logo">
    <div id="powered_by">
      <%= 'powered_by' %> <a href=<%= "#" %> target="_blank"><%= PaperLess %></a>
    </div>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('user_email').focus();
</script>

<%#= render "devise/shared/links" %>
