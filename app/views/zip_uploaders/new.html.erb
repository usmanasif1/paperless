<h3>Upload Zip</h3>
<hr size="5"> 
<div style="margin-left: 15%; width:60%;">
  <%= simple_form_for(@zip_upload, url: order_zip_uploaders_path(@order) , :html => {:class => 'form-horizontal' }) do |f| %>
    <%#= hidden_field_tag :order_id, @order.id %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Choose File (zip only):</label>
      <div class="col-sm-10">
        <%= f.file_field :zip %>
      </div>
    </div>

    <div class="form-group"> 
      <div style="margin-left: 19%;">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  <% end %>
</div>
<div class="clearfooter"></div>
</div>
